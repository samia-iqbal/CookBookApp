@model CookBookApp.Models.Binding.AddReviewBindingModel
@{
    ViewData["Title"] = "Create Review";
}

<h1>Create New Review for @ViewBag.RecipeName</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating" class="form-control">
                    <option value="5">5(Amazing)</option>
                    <option value="1">1(Not good)</option>
                    <option value="2">2(Ok)</option>
                    <option value="3">3(Good)</option>
                    <option value="4">4(Very Good)</option>
                    
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-area="" asp-controller="Recipes" asp-action="Index">Back to all Recipes</a>
    

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}