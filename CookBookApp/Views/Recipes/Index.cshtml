@model IEnumerable<CookBookApp.Models.Recipe>

@{
    ViewData["Title"] = "All Recipes";


}

<h1>All Recipes</h1>

<p>
    <a class="btn btn-success" asp-action="CreateRecipe">Add new recipe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoServing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrepTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Method)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageURL" style="height:128px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NoServing)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrepTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Method)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateRecipe", new { id = item.ID }, new { @class = "btn btn-warning btn-large" }) &nbsp;
                    @Html.ActionLink("Full Recipe", "ViewRecipes", new { id = item.ID }, new { @class = "btn btn-info btn-large" }) <br />
                    <br />

                    @Html.ActionLink("View Reviews", "ViewReviews", "Reviews", new { id = item.ID }, new { @class = "btn btn-secondary btn-large" }) <br />
                    <br />
                    @Html.ActionLink("Add Review", "CreateReview", "Reviews", new { recipeID = item.ID }, new { @class = "btn btn-success btn-small" }) &nbsp;
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@

                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-large" })



                </td>
            </tr>
        }
    </tbody>
</table>